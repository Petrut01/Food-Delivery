@model Licenta.Models.Delivery

<br/>

@if ((ViewBag.AvailableOrders as IList<Licenta.Models.Delivery>).Count() > 0)
{
    
    foreach (var order in ViewBag.AvailableOrders)
    {
        <div class="panel panel-default">
            <div class="panel page-header">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <h3>Comanda #@order.OrderId</h3>
                    </div>
                    <div class="col-md-4 text-center">
                        <h3>Total: @order.Order.Total lei</h3>
                        <h4>Adresa: @order.Order.Address</h4>
                        <h4>Client: @order.Order.FirstName @order.Order.LastName</h4>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <br />
                            <form method="post" action="/Deliveries/TakeOrder/@order.DeliveryId">
                                @Html.HttpMethodOverride(HttpVerbs.Put)
                                <button class="btn btn-success" type="submit">Preluati comanda <i class="fa fa-check"></i></button>
                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    }
} else { 
<div class="text-center">
    <h2> <b>Nu exista nicio comanda ce necesita livrare</b></h2>
</div>
    
}


