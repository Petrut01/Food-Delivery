@model Licenta.Models.RegisterViewModel
@{
    ViewBag.Title = "Inregistrare";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<div class="row">

    <div class="col-md-offset-3 col-md-6">
        <br />

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-inline">
                <div class="row">
                    <div class="col-md-offset-4 col-md-8">
                        <h2>@ViewBag.Title</h2>

                    </div>
                    <div class="col-md-offset-3 col-md-9">
                        <br />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group ">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-4 control-label required-field" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group ">
                @Html.LabelFor(m => m.LastName, new { @class = "col-md-4 control-label required-field" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group ">
                @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-4 control-label required-field" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group ">
                @Html.LabelFor(m => m.Address, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group ">
                @Html.LabelFor(m => m.City, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group ">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label required-field" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label required-field" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 text-center control-label required-field" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-inline">
                <div class="row">

                    <div class="col-md-offset-4 col-md-4"> <input type="submit" class="btn btn-default" value="Inregistrare" /></div>
                </div>

            </div>

        }
    </div>
    <div class="col-md-3">

    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
