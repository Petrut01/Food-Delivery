@model Licenta.Models.RegisterViewModel
@{
    ViewBag.Title = "Inregistrare";
}


<div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
        <br />

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-inline">
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <h2>@ViewBag.Title</h2>
                    </div>
                </div>
            </div>
            <br />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group ">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 text-center control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-inline">
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-4"> <input type="submit" class="btn btn-default" value="Inregistrare" /></div>
                </div>

            </div>

        }
    </div>
    <div class="col-md-3">

    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
